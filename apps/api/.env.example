# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# LocalStack (for local S3 development)
# Set USE_LOCALSTACK=true to use LocalStack instead of real AWS S3
# Run `make dev-up` first to start LocalStack, then `npm run dev:local`
USE_LOCALSTACK=false
LOCALSTACK_ENDPOINT=http://localhost:4566

# AWS Configuration
AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your_access_key_id (optional - use IAM roles in ECS)
# AWS_SECRET_ACCESS_KEY=your_secret_access_key (optional - use IAM roles in ECS)

# AWS Cognito
COGNITO_USER_POOL_ID=us-east-1_xxxxxxxxx
COGNITO_CLIENT_ID=your_cognito_client_id
COGNITO_REGION=us-east-1

# AWS S3
S3_BUCKET_NAME=encore-media
S3_PRESIGNED_URL_EXPIRY=900

# Database (AWS RDS PostgreSQL)
DATABASE_URL=postgresql://encore_admin:your_secure_password@encore-db.xxxxxxxxx.us-east-1.rds.amazonaws.com:5432/encore?sslmode=require

# External APIs
CLAUDE_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxx
SETLIST_FM_API_KEY=your_setlistfm_api_key
GENIUS_CLIENT_ID=your_genius_client_id
GENIUS_CLIENT_SECRET=your_genius_client_secret

# Logging
LOG_LEVEL=info

# CORS
CORS_ORIGIN=*

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# AWS Configuration
AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your_access_key_id (optional - use IAM roles in ECS)
# AWS_SECRET_ACCESS_KEY=your_secret_access_key (optional - use IAM roles in ECS)

# AWS Cognito
COGNITO_USER_POOL_ID=us-east-1_xxxxxxxxx
COGNITO_CLIENT_ID=your_cognito_client_id
COGNITO_REGION=us-east-1

# AWS S3
S3_BUCKET_NAME=encore-photos
S3_PRESIGNED_URL_EXPIRY=900

# Database (AWS RDS PostgreSQL)
DB_HOST=encore-db.xxxxxxxxx.us-east-1.rds.amazonaws.com
DB_PORT=5432
DB_NAME=encore
DB_USER=encore_admin
DB_PASSWORD=your_secure_password
DB_MAX_CONNECTIONS=20
DB_SSL=true

# External APIs
CLAUDE_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxx
SETLIST_FM_API_KEY=your_setlistfm_api_key
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# Logging
LOG_LEVEL=info

# CORS
CORS_ORIGIN=*

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

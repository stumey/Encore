{
  "expo": {
    "name": "Encore",
    "slug": "encore",
    "version": "1.0.0",
    "scheme": "encore",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#7c3aed"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.encore.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Encore needs access to your camera to capture concert photos and videos.",
        "NSPhotoLibraryUsageDescription": "Encore needs access to your photo library to upload concert media.",
        "NSMicrophoneUsageDescription": "Encore needs access to your microphone to record concert videos."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#7c3aed"
      },
      "package": "com.encore.app",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "bundler": "metro",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-image-picker",
        {
          "photosPermission": "Encore needs access to your photos to upload concert media.",
          "cameraPermission": "Encore needs access to your camera to capture concert moments."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
